{
  "name": "mblock",
  "version": "3.0.0-beta2.1",
  "description": "microBlock IDE (offline version)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild -f -w \"wifi-control\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microBlock-IDE/microBlock-IDE-offline.git"
  },
  "author": "microBlock",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/microBlock-IDE/microBlock-IDE-offline/issues"
  },
  "homepage": "https://github.com/microBlock-IDE/microBlock-IDE-offline#readme",
  "devDependencies": {
    "check-dependencies": "1.1.0",
    "electron": "9.2.0",
    "electron-builder": "22.9.1",
    "electron-rebuild": "2.3.5"
  },
  "dependencies": {
    "bcrypt": "5.0.0",
    "dive": "0.5.0",
    "node-disk-info": "1.1.0",
    "node-wifi": "2.0.14",
    "serialport": "9.0.1"
  },
  "build": {
    "appId": "com.microblock.app",
    "productName": "microBlock IDE",
    "asar": false,
    "files":[
      "!Arduino/*"
    ],
    "win": {
      "target": "msi",
      "icon": "build/favicon.ico"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "default",
      "icon": "build/favicon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/favicon.png",
      "category": "Development"
    },
    "fileAssociations": [
      {
        "ext": "mby",
        "name": "MBY",
        "description": "microBlock project file",
        "icon": "build/favicon.ico",
        "role": "Editor"
      }
    ]
  },
  "postinstall": "electron-builder install-app-deps"
}
